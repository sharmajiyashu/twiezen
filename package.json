    "@aws-sdk/lib-storage": "^3.967.0",
    "@aws-sdk/s3-request-presigner": "^3.967.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "apple-signin-auth": "^2.0.0",
    "aws-sdk": "^2.1693.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
