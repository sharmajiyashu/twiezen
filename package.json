{
  "name": "pineapple-node-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "seed": "ts-node ./src/seeders/runSeeders.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier src/**/*.ts && eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "dev": "set NODE_OPTIONS=--openssl-legacy-provider && nodemon --watch src/**/*.ts --exec ts-node --files src/index.ts",
    "start": "set NODE_OPTIONS=--openssl-legacy-provider && npm run build && node dist/index.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --skipLibCheck",
    "test:watch": "jest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:seed": "ts-node src/seed.ts",
    "dev:docker": "nodemon --watch src --ext ts,js,json --exec 'ts-node --files src/index.ts'",
    "prod:docker": "docker compose -f compose.yaml build --no-cache && docker compose -f compose.yaml up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TechanicInfotech/Pineapple-Node-Backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/TechanicInfotech/Pineapple-Node-Backend/issues"
  },
  "homepage": "https://github.com/TechanicInfotech/Pineapple-Node-Backend#readme",
  "dependencies": {
